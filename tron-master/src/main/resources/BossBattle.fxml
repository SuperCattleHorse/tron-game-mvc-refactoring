<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            style="-fx-background-color: black;">
    
    <!-- Center: Game container (canvas + overlays) -->
    <center>
        <StackPane fx:id="gameContainer">
            <!-- Game canvas will be added programmatically -->
            
            <!-- Victory panel (initially hidden) -->
            <VBox fx:id="victoryPanel" alignment="CENTER" spacing="20" 
                  maxWidth="500" maxHeight="400" visible="false"
                  style="-fx-background-color: rgba(0, 0, 0, 0.9);">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>
                
                <!-- Victory Image -->
                <ImageView fx:id="victoryImageView" preserveRatio="true" 
                           fitWidth="460" fitHeight="220">
                    <Image url="@win.png"/>
                </ImageView>
                
                <!-- Victory Message -->
                <Label text="Boss Defeated!" textFill="CYAN">
                    <font>
                        <Font name="Monospaced Bold" size="28"/>
                    </font>
                </Label>
                
                <!-- Return to Menu Button -->
                <Button fx:id="returnMenuButton" prefWidth="200" prefHeight="40"
                        style="-fx-background-color: transparent; -fx-cursor: hand; -fx-border-color: white; -fx-border-width: 2;">
                    <graphic>
                        <ImageView preserveRatio="true" fitWidth="200" fitHeight="40">
                            <Image url="@play_before.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
            
            <!-- Game over panel (initially hidden) -->
            <VBox fx:id="gameOverPanel" alignment="CENTER" spacing="15" 
                  maxWidth="500" maxHeight="450" visible="false"
                  style="-fx-background-color: rgba(0, 0, 0, 0.9);">
                <padding>
                    <Insets top="40" right="50" bottom="40" left="50"/>
                </padding>
                
                <!-- Game Over Image -->
                <ImageView fx:id="gameOverImageView" preserveRatio="true" 
                           fitWidth="460" fitHeight="220">
                    <Image url="@over.png"/>
                </ImageView>
                
                <!-- Defeat Message -->
                <Label text="Boss Battle Failed" textFill="WHITE">
                    <font>
                        <Font name="Monospaced" size="20"/>
                    </font>
                </Label>
                
                <!-- Restart Button -->
                <Button fx:id="restartButton" prefWidth="200" prefHeight="40"
                        style="-fx-background-color: transparent; -fx-cursor: hand; -fx-border-color: white; -fx-border-width: 2;">
                    <graphic>
                        <ImageView preserveRatio="true" fitWidth="200" fitHeight="40">
                            <Image url="@restart.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                
                <!-- Game Menu Button -->
                <Button fx:id="gameMenuButton" prefWidth="200" prefHeight="40"
                        style="-fx-background-color: transparent; -fx-cursor: hand; -fx-border-color: white; -fx-border-width: 2;">
                    <graphic>
                        <ImageView preserveRatio="true" fitWidth="200" fitHeight="40">
                            <Image url="@main_menu.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
            
            <!-- Pause dialog (initially hidden) -->
            <VBox fx:id="pausePanel" alignment="CENTER" spacing="20" 
                  maxWidth="400" maxHeight="300" visible="false"
                  style="-fx-background-color: rgba(0, 0, 0, 0.85);">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>
                
                <Label text="PAUSED" textFill="CYAN">
                    <font>
                        <Font name="Monospaced Bold" size="32"/>
                    </font>
                </Label>
                
                <Label text="Press SPACE to Resume" textFill="WHITE">
                    <font>
                        <Font name="Monospaced" size="16"/>
                    </font>
                </Label>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
