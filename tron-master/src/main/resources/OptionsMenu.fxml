<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            style="-fx-background-color: black;">
    
    <!-- Top: Title -->
    <top>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: black;">
            <padding>
                <Insets top="40" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="OPTIONS" style="-fx-text-fill: white; -fx-font-size: 48; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="48"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <!-- Center: Options content area -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: black;">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
            
            <!-- Background Color Section -->
            <VBox alignment="CENTER" spacing="15">
                <Label text="Background Color" style="-fx-text-fill: white; -fx-font-size: 28;">
                    <font>
                        <Font size="28"/>
                    </font>
                </Label>
                
                <!-- Color selection buttons - Row 1 -->
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="colorBlackButton" prefWidth="80" prefHeight="60"
                            style="-fx-background-color: black; -fx-border-color: white; -fx-border-width: 2; -fx-cursor: hand;"/>
                    <Button fx:id="colorDarkGrayButton" prefWidth="80" prefHeight="60"
                            style="-fx-background-color: #2a2a2a; -fx-border-color: white; -fx-border-width: 2; -fx-cursor: hand;"/>
                    <Button fx:id="colorNavyButton" prefWidth="80" prefHeight="60"
                            style="-fx-background-color: #000080; -fx-border-color: white; -fx-border-width: 2; -fx-cursor: hand;"/>
                    <Button fx:id="colorDarkGreenButton" prefWidth="80" prefHeight="60"
                            style="-fx-background-color: #006400; -fx-border-color: white; -fx-border-width: 2; -fx-cursor: hand;"/>
                </HBox>
                
                <!-- Color selection buttons - Row 2 -->
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="colorMaroonButton" prefWidth="80" prefHeight="60"
                            style="-fx-background-color: #800000; -fx-border-color: white; -fx-border-width: 2; -fx-cursor: hand;"/>
                    <Button fx:id="colorPurpleButton" prefWidth="80" prefHeight="60"
                            style="-fx-background-color: #800080; -fx-border-color: white; -fx-border-width: 2; -fx-cursor: hand;"/>
                    <Button fx:id="colorTealButton" prefWidth="80" prefHeight="60"
                            style="-fx-background-color: #008080; -fx-border-color: white; -fx-border-width: 2; -fx-cursor: hand;"/>
                    <Button fx:id="colorOliveButton" prefWidth="80" prefHeight="60"
                            style="-fx-background-color: #808000; -fx-border-color: white; -fx-border-width: 2; -fx-cursor: hand;"/>
                </HBox>
                
                <!-- Current color indicator -->
                <Label fx:id="currentColorLabel" text="Current: Black" style="-fx-text-fill: cyan; -fx-font-size: 20;">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
            </VBox>
            
            <!-- Audio and Gameplay Settings - Side by Side -->
            <HBox alignment="CENTER" spacing="80" style="-fx-background-color: black;">
                <!-- Audio Settings Section (Left) -->
                <VBox alignment="CENTER" spacing="15" prefWidth="300">
                    <Label text="Audio Settings" style="-fx-text-fill: white; -fx-font-size: 28;">
                        <font>
                            <Font size="28"/>
                        </font>
                    </Label>
                    
                    <!-- BGM Checkbox -->
                    <HBox alignment="CENTER" spacing="10">
                        <CheckBox fx:id="bgmCheckBox" text="Background Music" selected="true"
                                  style="-fx-text-fill: white; -fx-font-size: 20; -fx-cursor: hand;">
                            <font>
                                <Font size="20"/>
                            </font>
                        </CheckBox>
                    </HBox>
                    
                    <!-- Sound Effects Checkbox -->
                    <HBox alignment="CENTER" spacing="10">
                        <CheckBox fx:id="soundEffectsCheckBox" text="Sound Effects" selected="true"
                                  style="-fx-text-fill: white; -fx-font-size: 20; -fx-cursor: hand;">
                            <font>
                                <Font size="20"/>
                            </font>
                        </CheckBox>
                    </HBox>
                </VBox>
                
                <!-- Gameplay Settings Section (Right) -->
                <VBox alignment="CENTER_LEFT" spacing="15" prefWidth="300">
                    <Label text="Gameplay Settings" style="-fx-text-fill: white; -fx-font-size: 28;">
                        <font>
                            <Font size="28"/>
                        </font>
                    </Label>
                    
                    <!-- Hard AI Checkbox -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <CheckBox fx:id="hardAICheckBox" text="Hard AI (Story Mode)"
                                  style="-fx-text-fill: white; -fx-font-size: 20; -fx-cursor: hand;">
                            <font>
                                <Font size="20"/>
                            </font>
                        </CheckBox>
                    </HBox>
                    
                    <!-- Map Selection Label -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Map (Survival Mode):" style="-fx-text-fill: white; -fx-font-size: 20;">
                            <font>
                                <Font size="20"/>
                            </font>
                        </Label>
                    </HBox>
                    
                    <!-- Map Selection ChoiceBox -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <?import javafx.scene.control.ChoiceBox?>
                        <ChoiceBox fx:id="mapTypeChoiceBox" prefWidth="250"
                                   style="-fx-background-color: #2a2a2a; -fx-font-size: 16; -fx-cursor: hand;">
                        </ChoiceBox>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
    
    <!-- Bottom: Back button -->
    <bottom>
        <HBox alignment="CENTER" spacing="0" style="-fx-background-color: black;">
            <padding>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </padding>
            
            <!-- Back Button -->
            <Button fx:id="backButton" 
                    style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 2; -fx-padding: 0;">
                <graphic>
                    <ImageView preserveRatio="true" fitWidth="250" fitHeight="80">
                        <Image url="@main_menu.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
