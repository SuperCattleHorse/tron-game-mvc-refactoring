<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            style="-fx-background-color: black;">
    
    <!-- Center: Game container (canvas + overlays) -->
    <center>
        <StackPane fx:id="gameContainer">
            <!-- Game canvas will be added programmatically -->
            
            <!-- Game over panel (initially hidden) -->
            <VBox fx:id="gameOverPanel" alignment="CENTER" spacing="15" 
                  maxWidth="500" maxHeight="400" visible="false"
                  style="-fx-background-color: rgba(0, 0, 0, 0.85);">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>
                
                <!-- Game Over Image -->
                <ImageView fx:id="gameOverImageView" preserveRatio="true" 
                           fitWidth="460" fitHeight="220">
                    <Image url="@over.png"/>
                </ImageView>
                
                <!-- Final Score Label (bound to scoreLabel) -->
                <Label fx:id="finalScoreLabel" textFill="WHITE">
                    <font>
                        <Font name="Monospaced" size="20"/>
                    </font>
                </Label>
                
                <!-- Restart Button -->
                <Button fx:id="restartButton" prefWidth="200" prefHeight="40"
                        style="-fx-background-color: transparent; -fx-cursor: hand; -fx-border-color: white; -fx-border-width: 2;">
                    <graphic>
                        <ImageView preserveRatio="true" fitWidth="200" fitHeight="40">
                            <Image url="@restart.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                
                <!-- Game Menu Button -->
                <Button fx:id="menuButton" prefWidth="200" prefHeight="40"
                        style="-fx-background-color: transparent; -fx-cursor: hand; -fx-border-color: white; -fx-border-width: 2;">
                    <graphic>
                        <ImageView preserveRatio="true" fitWidth="200" fitHeight="40">
                            <Image url="@play_before.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
            
            <!-- Level complete panel (initially hidden) -->
            <VBox fx:id="levelCompletePanel" alignment="CENTER" spacing="20" 
                  maxWidth="500" maxHeight="400" visible="false"
                  style="-fx-background-color: rgba(0, 0, 0, 0.85);">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>
                
                <!-- Win Image -->
                <ImageView preserveRatio="true" fitWidth="360" fitHeight="60">
                    <Image url="@win.png"/>
                </ImageView>
                
                <!-- Level Complete Label -->
                <Label fx:id="levelCompleteLabel" text="Level Complete! Next level starting..." textFill="YELLOW">
                    <font>
                        <Font name="Monospaced" size="20"/>
                    </font>
                </Label>
            </VBox>
        </StackPane>
    </center>
    
    <!-- Bottom: Score panel -->
    <bottom>
        <HBox fx:id="scorePanel" alignment="CENTER" spacing="30" 
              style="-fx-background-color: black;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <Label fx:id="scoreLabel" text="Score: 0" textFill="CYAN">
                <font>
                    <Font name="Monospaced" size="18"/>
                </font>
            </Label>
            
            <Label fx:id="levelLabel" text="Level: 1" textFill="YELLOW">
                <font>
                    <Font name="Monospaced" size="18"/>
                </font>
            </Label>
            
            <Label fx:id="boostLabel" text="Boost: 3" textFill="GREEN">
                <font>
                    <Font name="Monospaced" size="18"/>
                </font>
            </Label>
        </HBox>
    </bottom>
    
</BorderPane>
